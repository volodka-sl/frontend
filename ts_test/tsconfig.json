{
    "compilerOptions": {
        "target": "ES2022",
        "module": "ES6",
        "esModuleInterop": true,
        "strict": true,
        "rootDir": "src",
        "outDir": "dist",
        "allowJs": true,
        "noImplicitAny": true,
        "strictNullChecks": true,
        "strictBindCallApply": true,
        "strictPropertyInitialization": true,
        "strictFunctionTypes": true,
        "alwaysStrict": true,
        "jsx": "react",
    }
}